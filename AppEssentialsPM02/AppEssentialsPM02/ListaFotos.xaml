<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppEssentialsPM02.ListaFotos">
    


    <ContentPage.Content>

        <StackLayout>
            <ListView x:Name="ListaFotosBD" 
                      ItemSelected="ListaFotosBD_ItemSelected" 
                      RowHeight="100" 
                      BackgroundColor="#000000" 
                      SeparatorColor="#8D66F3"
                      HasUnevenRows = "true">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Background="#1b1b1b" Padding="20,10,20,10">
                              
                                <SwipeView>
                                    <SwipeView.LeftItems>
                                        <SwipeItems>
                                            <SwipeItem Text="Reproducir"
                                               IconImageSource="VectorReproducir.png"
                                               BackgroundColor="#5E95D5"
                                               
                                               />
                                            <SwipeItem Text="Eliminar"
                                               IconImageSource="VectorBasurero.png"
                                               BackgroundColor="#DF5B77"
                                                />
                                        </SwipeItems>
                                    </SwipeView.LeftItems>
                                    <!-- Content -->
                                    
                                    

                                    <StackLayout Orientation="Horizontal">
                                        <Frame BackgroundColor="#3E3161" CornerRadius="10" VerticalOptions="Fill">
                                            <Label 
                                               TextColor="Aqua" Text="{Binding id}" IsVisible="true" FontSize="20" VerticalOptions="Center" Padding="0" />
                                        </Frame>


                                        <Label 
                                               TextColor="Aqua" Text="{Binding Name}" IsVisible="true" />

                                        <!--<Frame BackgroundColor="#3E3161" CornerRadius="10" VerticalOptions="Fill" Margin="40,0,0,0" BorderColor="#748FAD">
                                            <Image x:Name="fotodb" Source="{Binding ImageRoute}" HorizontalOptions="End" Margin="0"/>    
                                        </Frame>-->


                                    </StackLayout>
                                </SwipeView>

                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Frame BorderColor="#3E77F3" BackgroundColor="#121212" Margin="-20" CornerRadius="10" >
                <StackLayout >

                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="10,0,10,10">
                        <Label TextColor="#AEA3FA" Text="Ha seleccionado la foto num.: " FontSize="20"/>
                        <Label TextColor="#AEA3FA" x:Name="seleccion" FontSize="20" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                        <!--<Button x:Name="btnmod" Text="Modificar Datos" 
                                                    BackgroundColor="#af95cf" Margin="10,0,10,0" FontSize="15" Clicked="btnmod_Clicked" FontAttributes="Bold" TextColor="#351B58"/>

                        <Button x:Name="btnborrar" Text="Borrar Datos" 
                                                BackgroundColor="#af95cf" Margin="10,0,10,0" FontSize="15" Clicked="btnborrar_Clicked" FontAttributes="Bold" TextColor="#351B58"/>-->
                    </StackLayout>

                </StackLayout>
            </Frame>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>

